  version: v1                                                                                            
                                                                                                         
  routes:                                                                                                
    # Channel-specific prompts (highest priority)                                                        
    channel_specific: "prompts/{category}/{channel}.md"                                                  
                                                                                                         
    # Category-specific prompts                                                                          
    category_default: "prompts/{category}/default.md"                                                    
                                                                                                         
    # Global fallback                                                                                    
    global_default: "prompts/default.md"                                                                 
                                                                                                         
  fallback_chain:                                                                                        
    - channel_specific                                                                                   
    - category_default                                                                                   
    - global_default  
